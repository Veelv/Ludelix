{
    "name": "veeelv/ludelix",
    "description": "Ludelix Application Skeleton - Modern PHP Application with SPA Integration",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "ludelix",
        "framework",
        "application",
        "spa",
        "php"
    ],
    "authors": [
        {
            "name": "Ludelix Team",
            "email": "team@ludelix.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "ludelix/framework": "^1.0",
        "monolog/monolog": "^3.9",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
