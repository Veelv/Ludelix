#!/usr/bin/env php
<?php

/**
 * Mi - Ludelix Framework CLI
 * 
 * Command line interface for Ludelix Framework
 * 
 * @package Ludelix\Framework
 * @version 1.1.0
 */

// Ensure we're running from the command line
if (php_sapi_name() !== 'cli') {
    die('Mi can only be run from the command line.');
}

// Load Composer autoloader
require_once __DIR__ . '/vendor/autoload.php';

// Bootstrap the application
$app = require_once __DIR__ . '/bootstrap/app.php';

// Create Mi instance using the new Mi class
$mi = new \Ludelix\Core\Console\Mi($app);

// Run the command
exit($mi->run($argv));