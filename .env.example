# APPLICATION CONFIGURATION
APP_NAME=Ludelix App
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_KEY=

# DATABASE CONFIGURATION
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=ludelix_app
DB_USERNAME=root
DB_PASSWORD=
DB_FOREIGN_KEYS=true
MYSQL_ATTR_SSL_CA=

# REDIS CONFIGURATION
REDIS_CLIENT=phpredis
REDIS_CLUSTER=redis
REDIS_PREFIX=ludelix_database_
REDIS_URL=
REDIS_HOST=127.0.0.1
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# CACHE CONFIGURATION
CACHE_DRIVER=file
CACHE_PREFIX=ludelix
CACHE_TENANT_ISOLATION=true

# WEBSOCKET CONFIGURATION
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=6001

# ASSETS CONFIGURATION
ASSETS_BASE_PATH=public/assets
ASSETS_BASE_URL=/assets
ASSETS_VERSIONING=true
ASSETS_VERSIONING_STRATEGY=query

# BRIDGE CONFIGURATION
BRIDGE_DEBUG=false
BRIDGE_PERFORMANCE=true
BRIDGE_MAX_DEPTH=50
BRIDGE_TENANT_ENABLED=true
BRIDGE_TENANT_ISOLATION=true
BRIDGE_RESOLVER_CACHE=true
BRIDGE_RESOLVER_CACHE_TTL=3600
BRIDGE_CONTEXTUAL=true
BRIDGE_AUTO_CONTEXT=true

# LUDOU TEMPLATE ENGINE CONFIGURATION
LUDOU_CACHE_ENABLED=false
LUDOU_CACHE_TTL=3600
LUDOU_AUTO_RELOAD=true
LUDOU_STRICT_MODE=false
LUDOU_DEBUG=true
LUDOU_PRELOAD=false
LUDOU_OPTIMIZE=true


# UPLOAD CONFIGURATION
UPLOAD_OPTIMIZE_IMAGES=false
UPLOAD_OPTIMIZE_VIDEOS=false
UPLOAD_IMAGE_QUALITY=85
UPLOAD_MAX_WIDTH=1920
UPLOAD_MAX_HEIGHT=1080
UPLOAD_VIDEO_QUALITY=medium
UPLOAD_DISK=local
UPLOAD_PATH=cubby/up
UPLOAD_URL=/up